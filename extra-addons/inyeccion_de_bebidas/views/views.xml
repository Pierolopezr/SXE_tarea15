    <!--Los menús sirven para proporcionar una estructura lógica y accesible para que los usuarios puedan navegar por el sistema de manera eficiente-->
    <!-- Top menu item -->
    <!--menú principal-  Aparece en la barra de navegación superior y se usa para organizar los módulos del sistema-->

    <menuitem name="Inyección de bebidas" id="inyeccion_de_bebidas.menu_root"/>

    <!-- menu categories -->
    <!-- sirve para organizar más detalladamente las opciones dentro de un módulo -->

    <menuitem name="Alumnos" id="inyeccion_de_bebidas.menu_1" parent="inyeccion_de_bebidas.menu_root"/>
<!--
    <menuitem name="Menu 2" id="inyeccion_de_bebidas.menu_2" parent="inyeccion_de_bebidas.menu_root"/>
