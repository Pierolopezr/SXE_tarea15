    <!-- actions -->
    <!-- Se utiliza dentro de una vista específica para ejecutar ciertas acciones directamente relacionadas con los registros que se están viendo.-->

    <menuitem name="List" id="inyeccion_de_bebidas.menu_1_list" parent="inyeccion_de_bebidas.menu_1"
              action="inyeccion_de_bebidas.action_window"/>
