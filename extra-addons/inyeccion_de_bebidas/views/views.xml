<odoo>
  <data>
    <!-- explicit list view definition -->
    <!--Las vistas en Odoo definen la forma en que los datos se presentan en la interfaz de usuario-->

    <record model="ir.ui.view" id="inyeccion_de_bebidas.list">
      <field name="name">inyeccion_de_bebidas list</field>
      <field name="model">inyeccion_de_bebidas.inyeccion_de_bebidas</field>
      <field name="arch" type="xml">
        <list>
          <field name="alumno"/>
          <field name="nivel_de_sueno"/>
          <field name="bebida_recomendada"/>
        </list>
      </field>
    </record>


    <!-- actions opening views on models -->
    <!--definen qué vista se debe mostrar al usuario o qué acción debe realizarse-->

    <record model="ir.actions.act_window" id="inyeccion_de_bebidas.action_window">
      <field name="name">Mostrar listado de nivel de sueño  y la bebida recomendada de cada alumno</field>
      <field name="res_model">inyeccion_de_bebidas.inyeccion_de_bebidas</field>
      <field name="view_mode">list,form</field>
    </record>



